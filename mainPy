from gtts import gTTS
import random
import math

import alarm

x=0
def listen_command():
    return input("Команада: ")

def do_this_command(message):
    message = message.lower()

    if "привет" in message:
        say_message ("Привет друг")
    elif "пока" in message:
        say_message("Пока")
        exit()

    elif "будильник" in message:
      # f = open("Alarm") разобраться с открытием файлов питон
        print("1")

    elif "вычислить" in message:
        say_going= input("Введите действие: ")
        if "возведи в квадрат" in say_going:
            print("введите число")
            x =int(input())
            x = x*x
            print(x)



    else:
        say_message("Unknown command")

def say_message(message):

    print(message)
if __name__ == "__main__":
    while True:
        command = listen_command()
        do_this_command(command)
